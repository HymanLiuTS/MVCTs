                @Html.ValidationMessageFor(model => model.AlbumEdit.ArtistId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AlbumEdit.Title, htmlAttributes: new { @class = "control-label col-md-2" })
